<!DOCTYPE html>
<html lang="en">
<head>
    {{>head}}
    <title>Weather App</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
   {{>nav}}

<!-- main Header -->

<div class="container-fluid main_header">
  <div class="row">
      <div class="col-md-10 col-12 mx-auto">
       
       <div class="main_content">
           <form class="temp_form">
               <input type="text" id="cityName" placeholder="Enter your City name">
               <input type="submit" value="search" id="submitBtn">
           </form>
       </div>

       <div class="tempInfo">
           <div class="top_layer">
               <p id="day">Tuesday</p>
               <p id="today_data">21 FEB</p>
           </div>
           <div class="main_layer">
               <p id="city_name">Get Output</p>
               <div class="middle_layer data_hide">
                   <p id="temp"><span>0</span> <sup>o</sup>C</p>
                   <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i> </p>
               </div>
           </div>
       </div>

      </div>
    </div>
  </div>
  <!-- Footer area  -->
  {{>footer}}
  
  <script src="js/main.js"></script>

  <script>
      const day = document.getElementById("day");
      const today_data = document.getElementById("today_data");

        const currentDay = () => {
            let newDate = new Date();

            var weekday = new Array(7);
            weekday[0] = "Sun";
            weekday[1] = "Monday";
            weekday[2] = "Tue";
            weekday[3] = "Wed";
            weekday[4] = "Thu";
            weekday[5] = "Fri";
            weekday[6] = "Sat";

             var month = [
                'Jan',
                'Feb',
                'Mar',
                'Apr',
                'May',
                'June',
                'July',
                'Aug',
                'Sept',
                'Oct',
                'Nov',
                'Dec'
            ];

            let days =weekday[newDate.getDay()];
            let months = month[newDate.getMonth()];
            let date = newDate.getDate();

            let todayDate = `${date} ${months}`;
        
            day.innerText = days
            today_data.innerText = todayDate
        }
        currentDay();
  </script>
</body>
</html>